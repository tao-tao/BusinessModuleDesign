		<property name="password" value="${jdbc0.password}"/>
		<property name="maxActive" value="${jdbc0.maxActive}" />
		<property name="maxIdle" value="${jdbc0.maxIdle}" />
		<property name="maxWait" value="${jdbc0.maxWait}"/>
